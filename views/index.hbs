<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-">
                <div class="card " style="width: 15rem; height:25rem" >
                    <img style="width:350px; height:250px" src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.Description}}.</p>
                        <a href="#" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>



    </div>
</section>