<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success mt-5 ml-auto">Add Product</a>
            
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Images</th>
    </tr>
  </thead>
  <tbody>
      {{#each product}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width:50px; height:50px" src="/product-images/{{this._id}}.jpg" alt="error"</td>
      <td>
      <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary ">Edit</a>
      <a href="/delete/{{this._id}}" class="btn btn-danger " onclick="return confirm('Are you sure to delete Device {{this.Name}}?')">Delete</a>
      </td>
    </tr>
      {{/each}}
  </tbody>
</table>
    </div>
</section>